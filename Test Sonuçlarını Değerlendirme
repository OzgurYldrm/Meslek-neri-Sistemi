import random

###Rastgele test sonucu oluşturan fonksiyon
def test_oluştur():
  list = ["A","B","C"]
  cevaplar_liste = []
  for i in range(90):
    x = random.choice(list)
    cevaplar_liste.append(x)
  return cevaplar_liste
  
###Test sonuçlarını değerlendiren fonksiyon
def hesapla(liste):
  sosyal = 0
  gerçekçi = 0
  araştırıcı = 0
  girişimci = 0
  geleneksel = 0
  artistik = 0
  araştırıcı_index = [0,2,3,7,10,16,21,33,38,40,46,47,47,70,79]
  artistik_index = [5,9,13,30,31,41,43,44,49,61,71,73,76,77,80]
  sosyal_index = [1,20,28,36,48,54,57,59,63,64,65,72,86,87,89]
  girişimci_index = [6,14,15,17,19,27,32,34,50,55,62,66,74,82,84]
  geleneksel_index = [4,11,22,23,26,29,35,42,45,56,68,75,85,88]
  gerçekçi_index = [8,12,18,24,25,37,39,51,52,53,58,60,69,81,83]
  for i in sosyal_index:
    if liste[i]=="A":
        sosyal = sosyal + 3
    elif liste[i]=="B":
        sosyal = sosyal + 2
    elif liste[i]=="C":
        sosyal = sosyal + 1
  for i in araştırıcı_index:
    if liste[i]=="A":
        araştırıcı = araştırıcı + 3
    elif liste[i]=="B":
        araştırıcı = araştırıcı + 2
    elif liste[i]=="C":
        araştırıcı = araştırıcı + 1
  for i in girişimci_index:
    if liste[i]=="A":
        girişimci = girişimci + 3
    elif liste[i]=="B":
        girişimci = girişimci + 2
    elif liste[i]=="C":
        girişimci = girişimci + 1
  for i in gerçekçi_index:
    if liste[i]=="A":
        gerçekçi = gerçekçi + 3
    elif liste[i]=="B":
        gerçekçi = gerçekçi + 2
    elif liste[i]=="C":
        gerçekçi = gerçekçi + 1
  for i in artistik_index:
    if liste[i]=="A":
        artistik = artistik + 3
    elif liste[i]=="B":
        artistik = artistik + 2
    elif liste[i]=="C":
        artistik = artistik + 1
  for i in geleneksel_index:
    if liste[i]=="A":
        geleneksel = geleneksel + 3
    elif liste[i]=="B":
        geleneksel = geleneksel + 2
    elif liste[i]=="C":
        geleneksel = geleneksel + 1
  print(sosyal)
  print(araştırıcı)
  print(artistik)
  print(gerçekçi)
  print(girişimci)
  print(geleneksel)
